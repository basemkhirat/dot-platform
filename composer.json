{

    "name": "dot/platform",

    "description": "The core platform of dot/cms",

    "keywords": ["dotcms", "framework", "laravel", "cms", "modules", "plugins"],

    "license": "MIT",

    "type": "package",

    "require": {
        "php": ">=5.6.4",
        "laravel/framework": ">=5.4",
        "barryvdh/laravel-debugbar": "2.*",
        "roumen/sitemap": "2.*",
        "intervention/image": "2.*",
        "aws/aws-sdk-php-laravel": "2.0",
        "sunra/php-simple-html-dom-parser": "^1.5"
    },

    "autoload": {
        "classmap": [
            "src/bootstrap"
        ]
    },

    "scripts": {
        "post-update-cmd": [
            "php artisan dot:update"
        ]
    },

    "config": {
        "preferred-install": "dist"
    },

    "minimum-stability" : "dev",

    "extra": {
        "laravel": {
            "providers": [
                "Dot\\Platform\\CmsServiceProvider"
            ]
        }
    }
}
